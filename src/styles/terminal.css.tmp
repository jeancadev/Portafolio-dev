/* Terminal de macOS */
.terminal {
  --terminal-background: rgb(30, 30, 30);
  --terminal-text: rgb(230, 230, 230);
  --terminal-border: rgba(255, 255, 255, 0.1);
  
  background-color: var(--terminal-background);
  border: 1px solid var(--terminal-border);
  border-radius: 0.75rem;
  box-shadow: 0 10px 30px -10px rgba(0, 0, 0, 0.3);
  width: 100%;
  max-width: 800px;
  margin: 0 auto;
  overflow: hidden;
  opacity: 0;
  transform: translateY(20px);
  animation: terminalEntrance 1s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  animation-delay: 0.3s;
  color: var(--terminal-text);
}

.terminal-header {
  background: linear-gradient(180deg, #424242 0%, #373737 100%);
  padding: 0.75rem 1rem;
  display: flex;
  align-items: center;
  border-bottom: 1px solid var(--terminal-border);
}

.terminal-buttons {
  display: flex;
  gap: 0.5rem;
  margin-right: 1rem;
}

.terminal-button {
  width: 12px;
  height: 12px;
  border-radius: 9999px;
  transition: transform 0.2s ease;
}

.terminal-button:hover {
  transform: scale(1.1);
}

.terminal-close { background-color: #ff5f56; }
.terminal-minimize { background-color: #ffbd2e; }
.terminal-maximize { background-color: #27c93f; }

.terminal-title {
  flex: 1;
  text-align: center;
  color: var(--terminal-text);
  font-size: 0.875rem;
  font-family: ui-monospace, "SF Mono", Menlo, Monaco, Consolas, monospace;
}

.terminal-body {
  padding: 2rem;
  font-family: ui-monospace, "SF Mono", Menlo, Monaco, Consolas, monospace;
  line-height: 1.6;
  color: var(--terminal-text);
  background-color: var(--terminal-background);
}

.terminal-content {
  animation: contentFade 0.5s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  animation-delay: 0.8s;
  opacity: 0;
}

:is(.dark) .terminal {
  --terminal-background: rgb(30, 30, 30);
  --terminal-text: rgb(230, 230, 230);
  --terminal-border: rgba(255, 255, 255, 0.1);
}

:is(:not(.dark)) .terminal {
  --terminal-background: rgb(245, 245, 245);
  --terminal-text: rgb(30, 30, 30);
  --terminal-border: rgba(0, 0, 0, 0.1);
}

@keyframes terminalEntrance {
  0% {
    opacity: 0;
    transform: translateY(20px) scale(0.98);
    filter: blur(8px);
  }
  50% {
    opacity: 0.5;
    filter: blur(4px);
  }
  100% {
    opacity: 1;
    transform: translateY(0) scale(1);
    filter: blur(0);
  }
}

@keyframes contentFade {
  0% {
    opacity: 0;
    transform: translateY(10px);
    filter: blur(4px);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
    filter: blur(0);
  }
}
